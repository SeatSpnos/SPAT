<!-- views/pages/login.ejs -->
<!doctype html>
<html>
<head>
	<title>SPNOS login</title>
	<script type="text/javascript" src="lib/bootstrap/dist/js/bootstrap.min.js"></script>
    <link rel="stylesheet" href="lib/bootstrap/dist/css/bootstrap.min.css">  
</head>
<style>
    body       { padding-top:80px; }
</style>
<body style="background: #333333">
    <div class="container-fluid" no-gutter>
        <div class = "col-sm-9" >
         <img src="/imgs/wallpaper01.jpg" class="img-responsive img-rounded" alt="img">             
        </div>
        <div class="col-sm-3">
            <br>
            <br>
            <br>
            <!-- show any messages that come back with authentication -->
            <% if (message.length > 0) { %>
                <div class="alert alert-danger"><%= message %></div>
            <% } %>
            <!-- LOGIN FORM -->
             <img src="/imgs/nos_logo2.png" class="img-responsive" alt="img" width="150px" height="80px">
             <br>  
            
            <form action="/login" method="post">
                <div class="form-group">
                    <input type="text" class="form-control" name="username" placeholder="username">
                </div>
                <div class="form-group">
                    <input type="password" class="form-control" name="password" placeholder="password">
                </div>
                <div class="form-group">
                    <label style="color: white" >Lembra-me</label>
                    <input type="checkbox" class="form-control-left" name="remember" value="yes">
                </div>

                <button type="submit" class="btn btn-success btn-lg">Iniciar sess√£o</button>
            </form>
        </div>
    </div>
</body>
</html>