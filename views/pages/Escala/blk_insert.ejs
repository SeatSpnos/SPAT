	<div class="contairner">
		<div id= "myModal" class= "modal fade" role="dialog">
			<div class= "modal-dialog">
				<div class = "modal-content">
					<div class = "modal-header">
						<button type= "button" class="close" data-dismiss="modal">&times;</button>
						<h4 class="modal-title">Alteração em Massa</h4>
					</div>
					<div class="modal-body">
						<form action="/escala_blk_update" method="post">
							<div class="row">
								<div class="col-sm-4">
									<label>Férias</label>
								</div>
								<div class="col-sm-8">									
									<select class="form-control" name="ferias">
										<option value =0 selected></option>
									  <option value =0 >Não</option>
									  <option value =1 >Sim</option>
									</select>
								</div>					
							</div>
							<div class="row">
								<div class="col-sm-4">
									<label>Horário</label>
								</div>
								<div class="col-sm-8">									
									<select class="form-control" name="horario">
										<option value =0 selected></option>
									  <option value =0 >Manhã</option>
									  <option value =1 >Tarde</option>
									</select>
								</div>					
							</div>
							<div class="row">
								<div class="col-sm-4">
									<label>Faltas</label>
								</div>
								<div class="col-sm-8">									
									<select class="form-control" name="falta">
										<option value =0 selected></option>
									  <option value =3 >Baixa</option>
									  <option value =5 >Licença</option>
									  <option value =4 >Nojo</option>
									  <option value =1 >Justificadas</option>
									</select>
								</div>					
							</div>
							<div class="row">
								<div class="col-sm-4">
									<label>Data Inicio</label>
								</div>
								<div class="col-sm-8">
									<div class='input-group date' id='datetimepicker1'>
				            <input type='text' class="form-control" name = "begin" required">
				            <span class="input-group-addon">
				            	<span class="glyphicon glyphicon-calendar"></span>
				            </span>
				          </div>
								</div>
							</div>
							<div class="row">
								<div class="col-sm-4">
									<label>Data Fim</label>
								</div>
								<div class="col-sm-8">
									<div class='input-group date' id='datetimepicker2'>
				            <input type='text' class="form-control" name = "end" required">
				            <span class="input-group-addon">
				            	<span class="glyphicon glyphicon-calendar"></span>
				            </span>
				          </div>
								</div>
							</div>
							<div class="row">
								<div class="col-sm-4">
									<label>Tecnico</label>
								</div>
								<div class="col-sm-8">									
									<select class="form-control" name="tec">
									<%for(var i in tecs){%>
										<option value = "<%= tecs[i].id%>" ><%= tecs[i].name%></option>
									<%}%> 
									</select>
								</div>					
							</div>
							<button type="submit" class="btn btn-warning btn-lg">Submeter</button>
						</form>
					</div>
				</div>
			</div>
		</div>
		<script type="text/javascript">
			$(function () {
		    $('#datetimepicker1').datetimepicker({
		      locale: 'pt',
		      format: 'YYYY-MM-DD'

		    });
		  });
			$(function () {
		    $('#datetimepicker2').datetimepicker({
		      locale: 'pt',
		      format: 'YYYY-MM-DD'

		    });
		  });
		  $(function () {
		    $('#datetimepicker3').datetimepicker({
		      locale: 'pt',
		      format: 'YYYY-MM'

		    });
		  });
		</script>
	</div>