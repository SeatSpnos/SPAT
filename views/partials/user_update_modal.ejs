<% var row 					= rows[0]%>

	
<div class="modal-body">
	<h1><span class="fa fa-sign-in"></span>Editar Utilizador</h1>
		<form action="/user_update" method="post">
			<div class="form-group">
				<input type="hidden" name="id" value="<%=row.id%>">
				<div class="col-sm-4">
					<label>Utilizador</label>
				</div>
				<div class="col-sm-8">				
					<input type="text" class="form-control" name="username" value="<%=row.username%>" required>
				</div>
			</div>
			<div class="form-group">
				<div class="col-sm-4">
	      	<label>Email</label>
	      </div>
				<div class="col-sm-8">
	      	<input type="email" class="form-control" name="email" value="<%=row.email%>">
	      </div>
	    </div>
	    <div class="form-group">
				<div class="col-sm-4">
	      	<label>Primeiro Nome</label>
	      </div>
				<div class="col-sm-8">
	      	<input type="text" class="form-control" name="firstName" value="<%=row.firstName%>" required>
	      </div>
	    </div>
	    <div class="form-group">
				<div class="col-sm-4">
	      	<label>Ultimo Nome</label>
	      </div>
				<div class="col-sm-8">
	      	<input type="text" class="form-control" name="lastName" value="<%=row.lastName%>" required>
	      </div>
	    </div>
	    <div class="form-group">
				<div class="col-sm-4">
					<label>Data Nascimento</label>
				</div>
				<div class="col-sm-8">
					<div class='input-group date' id='datetimepicker1'>
            <input type='text' class="form-control" name = "Data Nascimento" required value="<%=row.data_nascimento%>">
            <span class="input-group-addon">
            	<span class="glyphicon glyphicon-calendar"></span>
            </span>
          </div>
				</div>
			</div>
			<div class="form-group">
				<div class="col-sm-4">
					<label>Data de entrada</label>
				</div>
				<div class="col-sm-8">
					<div class='input-group date' id='datetimepicker2'>
            <input type='text' class="form-control" name = "Data Entrada" required value="<%=row.data_entrada%>">
            <span class="input-group-addon">
            	<span class="glyphicon glyphicon-calendar"></span>
            </span>
          </div>
				</div>
			</div>
			<div class="form-group">
				<div class="col-sm-4">
					<label>Foto</label>
				</div>
				<div class="col-sm-8">
					<input type="text" class="form-control" name="picture" value="<%=row.foto%>">
				</div>
			</div>
			<div class="form-group">
				<div class="col-sm-4">
					<label>Contacto pessoal</label>
				</div>
				<div class="col-sm-8">
					<input type="text" class="form-control" name="cellnumber" value="<%=row.phonenumber%>" required>
				</div>
			</div>
			<div class="form-group">
				<div class="col-sm-4">
					<label>Carta de condução</label>
				</div>
				<div class="col-sm-8">
					<input type="text" class="form-control" name="driverslicence" value="<%=row.carta_conducao%>">
				</div>
			</div>
			<div class="form-group">
				<div class="col-sm-4">
					<label>Numero cartão NOS</label>
				</div>
				<div class="col-sm-8">
					<input type="text" class="form-control" name="noscard" value="<%=row.cartao_nos%>" required>
				</div>
			</div>
			<div class="form-group">
				<div class="col-sm-4">
					<label>Comentários</label>
				</div>
				<div class="col-sm-8">
					<input type="text" class="form-control" name="obs" value="<%=row.comments%>">
				</div>
			</div>
			<div class="form-group">
				<div class="col-sm-4">
					<label>Estado</label>
				</div>
				<div class="col-sm-8">
					<input type="text" class="form-control" name="state" value="<%=row.state%>" required>
				</div>
			</div>
			<div class="form-group">
				<div class="col-sm-4">
					<label>Grupo</label>
				</div>
				<div class="col-sm-8">
					<select class="form-control" name="group">
						<%for (var i = 0; i< groups.length; i++) {%>
						<%var group = groups[i]%>
						<option value="<%=group.name%>"><%=group.name%></option>
						<%}%>
					</select>
				</div>
			</div>
			<button type="submit" class="btn btn-warning btn-lg">Editar</button>
		</form>
</div>

<script type="text/javascript">
	 $(function () {
    $('#datetimepicker1').datetimepicker({
      locale: 'pt',
      format: 'YYYY-MM-DD'

    });
  });
	  $(function () {
    $('#datetimepicker2').datetimepicker({
      locale: 'pt',
      format: 'YYYY-MM-DD'

    });
  });
</script>
				